#!/usr/bin/env ruby
# rubocop:disable Style/FileName

if ENV['GITHOOKS_DEV']
  $:.unshift(File.expand_path(File.join(File.expand_path(__FILE__), '/../../lib')))
end
require 'githooks'

begin
  GitHooks::Runner.run(
    'args' => ARGV,
    'hook' => ENV['GITHOOKS_HOOK']
  )
rescue GitHooks::Error => e
  puts e.message
  exit 1
end
exit 0
